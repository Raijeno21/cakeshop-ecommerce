generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
 model User {
  id        String       @id @default(uuid())
  email     String       @unique
  password  String
  role      Role         @default(USER)

  details   UserDetails?

  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model UserDetails {
  id           String   @id @default(uuid())
  userId       String   @unique
  firstName    String
  lastName     String
  mobileNumber String
  address      String
  profileImage String
  order Order[] @relation("UserOrder")
  cartItems CartItems[] @relation("UserCart")
  wishlist Wishlist[] @relation("UserWishlist")
  user User @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}

model Items {
  id String @id @default(uuid())
  productName String
  price Int
  rating Int
  image String
  inventoryStatus Int
  category String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CartItems {
  id String @id @default(uuid())
  userID String
  productName String
  productId String
  image String
  quantity Int
  price Int
  isCheckout Boolean @default(false)
  inventoryStatus Int
  category String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user UserDetails @relation("UserCart",fields: [userID],references: [userId])
}
model Wishlist {
   id String @id @default(uuid())
  userID String
  productName String
  productId String
  image String
  price Int
  inventoryStatus Int
  category String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user UserDetails @relation("UserWishlist",fields: [userID], references: [userId])
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model Order {
  id              String      @id @default(uuid())
  userID          String
  productId       String
  productName     String
  image           String
  quantity        Int
  price     Int
  totalPrice          Int
  category        String
  orderStatus    OrderStatus @default(PENDING)
  paymentMethod   String?
  paymentId       String?
  shippingAddress String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user UserDetails @relation("UserOrder", fields: [userID], references: [userId])
}
